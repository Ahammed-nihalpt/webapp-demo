<div class="container">
    <div class="d-flex flex-row-reverse justify-content-center mt-4">
        <div class="">
            <h2>Users</h2>
        </div>
    </div>
    <div class="d-flex flex-row-reverse justify-content-between mt-4">
        <table>
            <tr>
                <form action="" method="post">
                    <th><input type="text" class="serch-input" name="search" style=" outline: none; padding: 2px; min-width: 200px;" placeholder="Search By First Name"></th>
                    <th><input type="submit" class="btn btn-outline-success btn-sm" value="Search"></th>
                </form>
            </tr>
        </table>
        <div>
            <a href="users/create" class="btn btn-outline-success btn-sm" tabindex="-1" role="button" aria-disabled="true">Create User</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm" id="usertable">
            <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Gender</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">password</th>
                <th scope="col">Qulification</th>
                <th scope="col">options</th>
            </tr> 
            </thead>
            <% allData.forEach(data =>{ %>
            <tbody> 
            <tr> 
                <td><%= data.first_name %></td>
                <td><%= data.last_name %></td>
                <td><%= data.dob %></td>
                <td><%= data.gender %></td>
                <td><%= data.email %></td>
                <td><%= data.phone %></td>
                <td><%= data.password %></td>
                <td><%= data.qulification %></td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a href="users/delete/<%= data._id %> " class="btn btn-outline-danger btn-sm" tabindex="-1" role="button" aria-disabled="true">Delete</a>
                        <a href="users/edit/<%= data._id %>" class="btn btn-outline-warning btn-sm" tabindex="-1" role="button" aria-disabled="true">Edit</a>
                    </div>
                </td>
            </tr>
        </tbody>
            <%})%>
        </table>
    </div>
</div>
